return {
    "catppuccin/nvim",
    name = "catppuccin",
    priority = 1000,  -- Ensures it loads early enough to apply colors to other plugins
    lazy = false,     -- Ensures it is not lazy-loaded, so it applies immediately
    opts = function()
        return {
            integrations = {
                gitsigns = true,
                nvimtree = true,
                treesitter = true,
                notify = false,
                mason = true,
                dap = true,
                dap_ui = true,
                alpha = true,
                telescope = {
                    enabled = true,
                },
                native_lsp = {
                    enabled = true,
                    virtual_text = {
                        errors = { "italic" },
                        hints = { "italic" },
                        warnings = { "italic" },
                        information = { "italic" },
                        ok = { "italic" },
                    },
                    underlines = {
                        errors = { "underline" },
                        hints = { "underline" },
                        warnings = { "underline" },
                        information = { "underline" },
                        ok = { "underline" },
                    },
                    inlay_hints = {
                        background = true,
                    },
                },
            }
        }
    end,
}

